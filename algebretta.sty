\newcommand{\parteAbin}[1]{\ifnumcomp{#1}{>}{0}
	{\ifnumcomp{#1}{=}{1}{x}{#1x}}{\ifnumcomp{#1}{=}{-1}{-x}{#1x}}}
\newcommand{\parteBbin}[1]{\ifnumcomp{#1}{>}{0}{+#1}{#1}}
\newcommand{\binomio}[2]{\ifnumcomp{#1}{>}{0}
	{(\parteAbin{#1}\parteBbin{#2})}{(#2\parteAbin{#1})}}


